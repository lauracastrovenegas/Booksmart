<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:isScrollContainer="true"
    tools:context=".ui.listings.ListingFormFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/fragment_logo"
            layout="@layout/booksmart_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_logo"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/work_sans_semibold"
            android:gravity="center"
            android:text="Post a Listing"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_marginStart="30dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/work_sans"
            android:text="Sell Textbooks, Clickers, Lab Manuals, and any other course materials you donâ€™t need anymore. "
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etListingCourse"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/work_sans"
            android:text="Upload an Image"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/etListingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:fontFamily="@font/work_sans"
            android:hint="Title"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etListingDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etListingTitle"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:fontFamily="@font/work_sans"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etListingCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etListingPrice"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:fontFamily="@font/work_sans"
            android:hint="Course"
            android:inputType="textShortMessage"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etListingPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etListingDescription"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:fontFamily="@font/work_sans"
            android:hint="Price"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnListingSelect"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundstyle_button"
            android:fontFamily="@font/work_sans"
            android:text="Select Photo"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:theme="@style/Button.Orange" />

        <Button
            android:id="@+id/btnListingPost"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/ivListingImagePreview"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="124dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/roundstyle_button"
            android:fontFamily="@font/work_sans"
            android:foregroundGravity="center_horizontal"
            android:text="Post Listing"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:theme="@style/Button.Orange" />

        <Button
            android:id="@+id/btnListingCapture"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/textView6"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/roundstyle_button"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/work_sans"
            android:text="Capture Photo"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/ivPostClose"
            android:layout_width="37dp"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:src="?attr/actionModeCloseDrawable"
            app:tint="@color/purple_500" />

        <ImageView
            android:id="@+id/ivListingImagePreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnListingSelect"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            tools:src="@tools:sample/avatars" />
    </RelativeLayout>
</ScrollView>