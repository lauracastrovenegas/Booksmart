<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:outlineProvider="none"
        android:theme="?attr/actionBarTheme" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tvToolbarTitleUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tvToolbarTitlePageProfile"
            android:fontFamily="@font/work_sans"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_large"
            tools:text="@string/username_placeholder" />

        <TextView
            android:id="@+id/tvToolbarTitlePageProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/work_sans_light"
            android:text="@string/profile_toolbar_title"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_subheading" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/ibToolbarOptionsProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/white"
        app:srcCompat="@drawable/ic_menu_hamburger"/>

</RelativeLayout>